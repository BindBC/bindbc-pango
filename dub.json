{
	"name": "bindbc-pango",
	"description": "Static & dynamic bindings to Pango, compatible with BetterC, @nogc, and nothrow.",
	"authors": ["Aya Partridge"],
	"license": "BSL-1.0",
	
	"dependencies": {"bindbc-common": "~>1.0.0"},
	"targetType": "staticLibrary",
	"targetPath": "lib",
	"targetName": "BindBC_Pango",
	
	"configurations": [
		{
			"name": "dynamic",
			"dependencies": {"bindbc-loader": "~>1.1.0"},
		},
		{
			"name": "dynamicBC",
			"dependencies": {"bindbc-loader": "~>1.1.0"},
			"subConfigurations": {
				"bindbc-loader": "yesBC",
				"bindbc-common": "yesBC",
			},
			"buildOptions": ["betterC"],
		},
		{
			"name": "static",
			"versions": ["BindPango_Static"],
		},
		{
			"name": "staticBC",
			"subConfigurations": {
				"bindbc-common": "yesBC",
			},
			"buildOptions": ["betterC"],
			"versions": ["BindPango_Static"],
		},
	],
	
	"subPackages": [
		{
			"name": "fontconfig",
			"sourcePaths": ["fontconfig"],
			"importPaths": ["fontconfig"],
			"dependencies": {
				"bindbc-pango": {"path": "../"},
				"bindbc-fontconfig": "~>1.0.0",
			},
			"targetPath": "lib",
			"targetName": "BindBC_Pango_Fc",
		},
		{
			"name": "freetype",
			"sourcePaths": ["freetype"],
			"importPaths": ["freetype"],
			"dependencies": {
				"bindbc-pango": {"path": "./"},
				"bindbc-pango:fontconfig": {"path": "./"},
				"bindbc-fontconfig": "~>1.0.0",
				"bindbc-freetype": "~>1.2.0",
			},
			"targetPath": "lib",
			"targetName": "BindBC_Pango_FT",
		},
	],
}
